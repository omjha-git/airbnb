<% layout('/layout/boilerplate') -%>

<h3 class="mb-4">Edit listing</h3>

<form method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data">

  <!-- TITLE -->
  <div class="mb-3">
    <label for="title" class="form-label">Title</label>
    <input
      id="title"
      name="listing[title]"
      class="form-control"
      type="text"
      value="<%= listing.title %>"
      required
    >
    <div class="invalid-feedback">please fill!</div>
  </div>

  <!-- PRICE + LOCATION ROW -->
  <div class="row mb-3">
    <div class="col-md-6">
      <label for="price" class="form-label">Price</label>
      <input
        id="price"
        name="listing[price]"
        class="form-control"
        type="number"
        value="<%= listing.price %>"
        required
      >
      <div class="invalid-feedback">please fill!</div>
    </div>

    <div class="col-md-6">
      <label for="location" class="form-label">Location</label>
      <input
        id="location"
        name="listing[location]"
        class="form-control"
        type="text"
        value="<%= listing.location %>"
        required
      >
      <div class="invalid-feedback">please fill!</div>
    </div>
  </div>

  <!-- COUNTRY -->
  <div class="mb-3">
    <label for="country" class="form-label">Country</label>
    <input
      id="country"
      name="listing[country]"
      class="form-control"
      type="text"
      value="<%= listing.country %>"
      required
    >
    <div class="invalid-feedback">please fill!</div>
  </div>

  <!-- IMAGE URL -->
   <div class="mb-3">
    <img src="<%= listing.image.url %>">
   </div>
  <!-- IMAGE FILE -->
<div class="mb-3">
  <label for="image" class="form-label">Image</label>
  <input
    id="image"
    name="image"
    class="form-control"
    type="file"
  >
</div>


  <!-- DESCRIPTION -->
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea
      id="description"
      name="listing[description]"
      class="form-control"
      rows="3"
      required
    ><%= listing.description %></textarea>
    <div class="invalid-feedback">please fill!</div>
  </div>

  <button type="submit" class="btn btn-dark add-btn">Save changes</button>
</form>

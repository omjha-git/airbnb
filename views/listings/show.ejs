<% layout('/layout/boilerplate') -%>

<div class="row mt-4">
  <div class="col-md-8 offset-md-2">

    <!-- Title -->
    <h2 class="mb-3 fw-semibold"><%= listing.title %></h2>

    <!-- Image card -->
    <div class="card mb-3 listing-card shadow-sm border-0" style="max-width: 22rem;">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="<%= listing.title %>"
      >
    </div>

    <!-- Owner + details -->
    <p class="mb-1 text-muted">
      <strong>Owner:</strong>
      <%= listing.owner ? listing.owner.username : "demo" %>
    </p>

    <p class="mb-1"><strong>Description:</strong> <%= listing.description %></p>
    <p class="mb-1"><strong>Location:</strong> <%= listing.location %></p>
    <p class="mb-1"><strong>Country:</strong> <%= listing.country %></p>
    <p class="mb-3 fs-5">
      <strong>Price:</strong>
      ₹<%= listing.price.toLocaleString("en-IN") %>/night
    </p>

    <!-- Action buttons -->
    <div class="listing-actions d-flex align-items-center gap-2 mt-3">
      <a href="/listings" class="btn btn-outline-secondary">
        Back to all listings
      </a>

      <% if (currUser && listing.owner && currUser._id.toString() === listing.owner._id.toString()) { %>
        <form method="GET" action="/listings/<%= listing._id %>/edit" class="m-0">
          <button type="submit" class="btn-edit-custom">
            Edit
          </button>
        </form>

        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE" class="m-0">
          <button type="submit" class="btn-delete-custom">
            Delete
          </button>
        </form>
      <% } %>
    </div>

  </div>
</div>

<!-- Review form + list -->
<div class="row mt-4">
  <div class="col-md-8 offset-md-2">
    <h4>Leave a review</h4>
    <hr>

    <% if (currUser) { %>
      <form
        class="mb-3 mt-3 needs-validation"
        action="/listings/<%= listing._id %>/reviews"
        method="POST"
        novalidate
      >
        <div class="mb-3 mt-3">
          <label for="rating">Rating</label>

          <!-- Star rating widget -->
          <fieldset class="starability-heartbeat">
            <legend class="visually-hidden">Rating:</legend>

            <input
              type="radio"
              id="no-rate"
              class="input-no-rate"
              name="review[rating]"
              value="0"
              checked
              aria-label="No rating."
            />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>

            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>

            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>

            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>

            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <label for="comment" class="mt-2">Comment</label>
          <textarea
            required
            name="review[comment]"
            id="comment"
            cols="30"
            rows="4"
            class="form-control"
          ></textarea>
          <div class="invalid-feedback">
            please fill!
          </div>
        </div>
        <button class="btn btn-outline-dark">Submit</button>
      </form>
    <% } else { %>
      <p class="text-muted">Please log in to leave a review.</p>
    <% } %>

    <hr>

    <% if (listing.reviews && listing.reviews.length > 0) { %>
      <h4>All reviews</h4>

      <div class="row">
        <% for (let review of listing.reviews) { %>
          <div class="card col-md-5 mb-3 ms-3">
            <h5 class="card-title">
              Review by <%= review.author && review.author.username ? review.author.username : "Anonymous" %>
            </h5>

            <h6 class="card-subtitle mb-2 text-muted">
              <%= review.rating %> star<%= review.rating === 1 ? "" : "s" %>
            </h6>

            <p class="starability-result" data-rating="<%= review.rating %>">
              Rated: <%= review.rating %> star<%= review.rating === 1 ? "" : "s" %>
            </p>

            <p class="card-text"><%= review.comment %></p>

            <% if (currUser) { %>
              <form
                class="mb-2"
                method="POST"
                action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
              >
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            <% } %>
          </div>
        <% } %>
      </div>
    <% } %>
  </div>

  <div class="col-8 offset-3 mb-3">
    <h3>where you'll be</h3>
    <div id="map"></div>
  </div>
</div>

<style>
  #map {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }
</style>

<script>
  const geometry = <%- JSON.stringify(listing.geometry || null) %>;
  const maptoken = "<%= mapToken %>";  // ✅ from controller
  const listingTitle = <%- JSON.stringify(listing.title) %>;
  const listingLocation = <%- JSON.stringify(listing.location) %>;

  if (geometry && Array.isArray(geometry.coordinates)) {
    mapboxgl.accessToken = maptoken;

    const map = new mapboxgl.Map({
      container: "map",
      style: "mapbox://styles/mapbox/streets-v12",
      center: geometry.coordinates,   // [lng, lat]
      zoom: 12
    });

    map.addControl(new mapboxgl.NavigationControl());

    const popup = new mapboxgl.Popup({ offset: 25 })
      .setHTML(`<h6>${listingTitle}</h6><p>${listingLocation}</p>`);

    new mapboxgl.Marker({ color: "red" })
      .setLngLat(geometry.coordinates)
      .setPopup(popup)
      .addTo(map);
  }
</script>

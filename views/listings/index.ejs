<% layout('/layout/boilerplate') -%>

<style>
  .filters-wrapper {
    position: relative;
    border-bottom: 1px solid #eee;
    padding: 10px 40px;
    overflow: hidden;
  }

  #filters {
    display: flex;
    gap: 2.5rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    white-space: nowrap;
    padding: 0 10px;
  }

  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    flex: 0 0 auto;
    min-width: 80px;
    text-align: center;
    opacity: 0.7;
    padding-bottom: 8px;
    transition: 0.3s ease;
    border-bottom: 2px solid transparent;
    text-decoration: none;
    color: #000;
  }

  .filter:link,
  .filter:visited,
  .filter:hover,
  .filter:active {
    text-decoration: none;
    color: #000;
  }

  .filter i {
    font-size: 1.5rem;
    margin-bottom: 6px;
    color: #000;
  }

  .filter p {
    margin: 0;
    font-size: 0.85rem;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
    transform: scale(1.05);
  }

  .filter.active {
    opacity: 1;
    border-bottom: 2px solid black;
  }

  .scroll-btn {
    background: white;
    border: 1px solid #ddd;
    border-radius: 50%;
    width: 35px;
    height: 35px;
    cursor: pointer;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .scroll-left { left: 5px; }
  .scroll-right { right: 5px; }

  /* toggle pill with black curved border */
  .tax-toggle{
    display: flex;
    align-items: center;
    gap: .35rem;
    font-size: 0.85rem;
    white-space: nowrap;

    padding: 6px 12px;
    border: 1px solid #000;
    border-radius: 999px;
    background-color: #fff;
  }

  .tax-toggle .form-check-label {
    color: #000;
    font-weight: 500;
    margin-bottom: 0;
  }

  a.text-decoration-none {
    color: #000;
  }
  a.text-decoration-none:hover {
    color: #000;
  }

  .tax-info {
    font-size: 0.8rem;
    color: #555;
  }
</style>

<div class="filters-wrapper">
  <div class="d-flex align-items-center gap-3">

    <button class="scroll-btn scroll-left">
      <i class="fa-solid fa-chevron-left"></i>
    </button>

    <div id="filters">
      <a href="/listings" class="filter">
        <i class="fa-solid fa-fire"></i><p>Trending</p>
      </a>

      <a href="/listings/category/mountain" class="filter">
        <i class="fa-solid fa-mountain"></i><p>Mountain</p>
      </a>

      <a href="/listings/category/beach" class="filter">
        <i class="fa-solid fa-umbrella-beach"></i><p>Beach</p>
      </a>

      <a href="/listings/category/forest" class="filter">
        <i class="fa-solid fa-tree"></i><p>Forest</p>
      </a>

      <a href="/listings/category/lake" class="filter">
        <i class="fa-solid fa-water"></i><p>Lake</p>
      </a>

      <a href="/listings/category/city" class="filter">
        <i class="fa-solid fa-city"></i><p>City</p>
      </a>

      <a href="/listings/category/snow" class="filter">
        <i class="fa-solid fa-snowflake"></i><p>Snow</p>
      </a>

      <a href="/listings/category/camping" class="filter">
        <i class="fa-solid fa-campground"></i><p>Camping</p>
      </a>

      <a href="/listings/category/boats" class="filter">
        <i class="fa-solid fa-ship"></i><p>Boats</p>
      </a>

      <a href="/listings/category/homes" class="filter">
        <i class="fa-solid fa-house"></i><p>Homes</p>
      </a>

      <a href="/listings/category/luxury" class="filter">
        <i class="fa-solid fa-spa"></i><p>Luxury</p>
      </a>

      <a href="/listings/category/village" class="filter">
        <i class="fa-solid fa-tree-city"></i><p>Village</p>
      </a>
    </div>

    <button class="scroll-btn scroll-right">
      <i class="fa-solid fa-chevron-right"></i>
    </button>

    <div class="tax-toggle">
      <div class="form-check-reverse form-switch m-0">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Show total price</label>
      </div>
    </div>

  </div>
</div>

<div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 g-3">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
        <div class="card h-100 listing-card">
          <img
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="<%= listing.title %>"
            style="height: 20rem; object-fit: cover;"
          >
          <div class="card-img-overlay"><%= listing.title %></div>
          <div class="card-body">
            <p class="card-text mb-1">
              <strong><%= listing.title %></strong><br>
              â‚¹<%= listing.price.toLocaleString("en-IN") %>/night
              <i class="tax-info">&nbsp; &nbsp; +18 % GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

<form method="GET" action="/listings/new">
</form>

<script>
  const filters = document.getElementById('filters');
  const btnLeft = document.querySelector('.scroll-left');
  const btnRight = document.querySelector('.scroll-right');
  const SCROLL_AMOUNT = 300;

  btnLeft.addEventListener('click', () => {
    filters.scrollBy({ left: -SCROLL_AMOUNT, behavior: 'smooth' });
  });

  btnRight.addEventListener('click', () => {
    filters.scrollBy({ left: SCROLL_AMOUNT, behavior: 'smooth' });
  });

  let priceswitch = document.getElementById("flexSwitchCheckDefault");
  priceswitch.addEventListener("click",()=>{
    let taxinfo = document.getElementsByClassName("tax-info");
    for(info of taxinfo){
      if(info.style.display!="inline"){
        info.style.display = "inline";
      } else{
        info.style.display = "none";
      }
    }
  })
</script>
